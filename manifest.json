{
  "manifest_version": 2,
  "name": "Image colours",
  "version": "2021.9",
    "background": {
    "persistent": true,
    "scripts": ["background.js"]
},
  "content_scripts": [
    {
	      "all_frames": true,
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "permissions": ["tabs","activeTab","storage","webRequest","webRequestBlocking","<all_urls>"],
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Image colours"
  },
  	"icons": {
        "128": "icon.png"
    }
}
